

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listSanPham = (List<ModelEF.Model.SanPham>)ViewBag.ListSanPham;
    var listDanhMuc = (List<ModelEF.Model.DanhMuc>)ViewBag.ListDanhMuc;
}




@foreach (var item_danhmuc in listDanhMuc)
{
        <h1  class="bg-white my-3 p-3 text-lg-center text-uppercase">@item_danhmuc.TenLoai</h1>
    <div class="row">
        @foreach (var item_sanpham in listSanPham)
        {
            if (item_sanpham.DanhMuc_Id == item_danhmuc.DanhMuc_Id)
            {
                <div class="col-sm-4 p-2">
                    <div class="best_shoes p-0 ">
                        <p class="best_text px-4 mb-0" style="height:50px"> @item_sanpham.TenSP</p>
                        <div class="shoes_icon p-3 " style="height:330px;">
                            <img src="@item_sanpham.HinhAnh" style="width: 100%;height: 100%;object-fit: cover;display:block;margin : auto">
                        </div>
                        <div class="star_text">
                            <div class="left_part">
                                <ul>
                                    <li><a href="#"><img src="~/Public/images/star-icon.png"></a></li>
                                    <li><a href="#"><img src="~/Public/images/star-icon.png"></a></li>
                                    <li><a href="#"><img src="~/Public/images/star-icon.png"></a></li>
                                    <li><a href="#"><img src="~/Public/images/star-icon.png"></a></li>
                                    <li><a href="#"><img src="~/Public/images/star-icon.png"></a></li>
                                </ul>
                                <div class="right_part">
                                </div>
                                <div class="shoes_price" style="text-align: left">
                                    <span style="color: #ff4e5b; font-size : 20px;">
                                        @{
                                            var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");

                                            var unitCost = String.Format(info, "{0:c0}", @item_sanpham.DonGia);
                                        }
                                        @Html.DisplayFor(modelItem => unitCost)
                                    </span>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        }
    </div>


    }




